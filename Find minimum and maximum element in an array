//Problem -- Given an array A of size N of integers. Your task is to find the minimum and maximum elements in the array.

//Solution

class Compute 
{
    static pair getMinMax(long a[], long n)  
    {
        //Write your code here
        long min=a[0];
        long max=a[0];
        
        for(long ele: a)
        {
            if(max<ele)
                max=ele;
            
            if(min>ele)
                min=ele;
        }
        pair obj = new pair(min,max);;
        return obj
    }
}
